@using Universal.Models;
@model List<YeuThich>

@{
    ViewBag.Title = "User - Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Danh sách yêu thích</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Danh sách yêu thích</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row bar">
            <div class="col-lg-9">
                <div class="row products">
                    @foreach (var i in Model)
                    {
                    <div class="col-lg-3 col-md-4">
                        <div class="product">
                            <div class="image"><a href="@Url.Action("Detail", "Product")"><img src="@i.sHinhSP" alt="@i.sTenSP" class="img-fluid image1"></a></div>
                            <div class="text">
                                <h3 class="h5"><a href="@Url.Action("Detail", "Product")">@i.sTenSP</a></h3>
                                <p class="price">@String.Format("{0:0,0}", @i.dGiaSP)VNĐ</p>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
            <div class="col-lg-3 mt-4 mt-lg-0">
                <!-- CUSTOMER MENU -->
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="h4 panel-title">Danh mục khách hàng</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills flex-column text-sm">
                            <li class="nav-item"><a href="@Url.Action("Index", "User")" class="nav-link active"><i class="fa fa-list"></i> Lịch sử</a></li>
                            <li class="nav-item"><a href="@Url.Action("Wishlist", "User")" class="nav-link"><i class="fa fa-heart"></i> Yêu thích</a></li>
                            <li class="nav-item"><a href="@Url.Action("Account", "User")" class="nav-link"><i class="fa fa-user"></i> Tài khoản</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>