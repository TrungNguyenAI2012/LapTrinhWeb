
@{
    ViewBag.Title = "Order - Step3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Phương thức thanh toán</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Phương thức thanh toán</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">
            <div id="checkout" class="col-lg-12">
                <div class="box">
                    <form method="get" action="@Url.Action("Step4", "Order")">
                        <ul class="nav nav-pills nav-fill">
                            <li class="nav-item"><a href="@Url.Action("Step1", "Order")" class="nav-link"> <i class="fa fa-map-marker"></i><br>Địa chỉ</a></li>
                            <li class="nav-item"><a href="@Url.Action("Step2", "Order")" class="nav-link"><i class="fa fa-truck"></i><br>Phương thức vận chuyển</a></li>
                            <li class="nav-item"><a href="@Url.Action("Step3", "Order")" class="nav-link active"><i class="fa fa-money"></i><br>Phương thức thanh toán</a></li>
                            <li class="nav-item"><a href="#" class="nav-link disabled"><i class="fa fa-eye"></i><br>Xem lại đơn</a></li>
                        </ul>
                        <div class="content">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="box payment-method">
                                        <h4>Thẻ điện tử</h4>
                                        <p>Dùng tiền điện tử trả trước.</p>
                                        <div class="box-footer text-center">
                                            <input type="radio" name="payment" value="payment1">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="box payment-method">
                                        <h4>Trả khi nhận</h4>
                                        <p>Trả khi bạn nhận được hàng.</p>
                                        <div class="box-footer text-center">
                                            <input type="radio" name="payment" value="payment2">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer d-flex flex-wrap align-items-center justify-content-between">
                            <div class="left-col"><a href="@Url.Action("Step2", "Order")" class="btn btn-secondary mt-0"><i class="fa fa-chevron-left"></i>Phương thức vận chuyển</a></div>
                            <div class="right-col">
                                <button type="submit" class="btn btn-template-main">Xem lại đơn<i class="fa fa-chevron-right"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>