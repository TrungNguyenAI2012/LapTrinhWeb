@using Universal.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>

@{
    ViewBag.Title = "Product - Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Sản phẩm</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row bar">
            <div class="col-md-3">
                <!-- MENUS AND FILTERS-->
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="h4 panel-title">Thể loại</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills flex-column text-sm category-menu">
                            @Html.Action("ChuDe", "Product")
                        </ul>
                    </div>
                </div>
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="h4 panel-title">Thương hiệu</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills flex-column text-sm category-menu">
                            @Html.Action("ThuongHieu", "Product")
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
            <div class="row products products-big">
                @foreach (var i in Model)
                {
                <div class="col-lg-4 col-md-6">
                    <div class="product">
                        <div class="image"><a href="@Url.Action("Detail", "Product", new { id = i.MaSP })"><img src=" @i.DDHinh" alt="" class="img-fluid image1"></a></div>
                        <div class="text">
                            <h3 class="h5"><a href="@Url.Action("Detail", "Product", new { id = i.MaSP })"> @i.TenSP</a></h3>
                            <p class="price">@String.Format("{0:0,0}", @i.GiaBan) VNĐ</p>
                        </div>
                    </div>
                </div>
                }
            </div>
                <div class="pages">
                    <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                        <ul class="pagination">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .pages li {
        padding: 0.5rem 0.75rem;
        line-height: 1.25;
        color: #4fbfa8;
        background-color: #fff;
        border: 1px solid #dee2e6;
    }
    .pages li.active {
        color: #348e7b;
        text-decoration: none;
        background-color: #e9ecef;
        border-color: #dee2e6;
        outline: 0;
    }
</style>