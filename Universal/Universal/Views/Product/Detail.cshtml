@using Universal.Models;

@{
    ViewBag.Title = "Product - Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Chi tiết sản phẩm</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item">@Html.ActionLink("Sản phẩm", "Index", "Product")</li>
                    <li class="breadcrumb-item active">Chi tiết sản phẩm</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row bar">
            <div class="col-lg-12">
                <div id="productMain" class="row">
                    <div class="col-sm-6">
                        <div data-slider-id="1" class="owl-carousel shop-detail-carousel owl-loaded owl-drag-">
                            <div class="owl-stage-outer">
                                <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0.25s ease 0s; width: 1193px;">
                                    <div class="owl-item active" style="width: 397.5px;">
                                        <div> <img src="@Model.DDHinh" alt="" class="img-fluid"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <form>
                            <div class="sizes">
                                <h3>Size hiện có</h3>
                                <select class="bs-select">
                                    <option value="small">Nhỏ</option>
                                    <option value="medium">Vừa</option>
                                    <option value="large">Lớn</option>
                                    <option value="x-large">Siêu lớn</option>
                                </select>
                            </div>
                            <p class="price">@String.Format("{0:0,0}", @Model.GiaBan) VNĐ</p>
                            <p class="text-center">
                                <a href="@Url.Action("ThemGioHang", "Order", new { @sMaSP = Model.MaSP, @strURL=Request.Url.ToString()})" class="btn btn-template-outlined"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
                                @{
                                    ThanhVien session = (ThanhVien)Session["taikhoan"];
                                }
                                @if (session != null)
                                {
                                    <a href="@Url.Action("ThemYeuThich", "User", new { @sMaSP = Model.MaSP, @strURL=Request.Url.ToString()})" data-toggle="tooltip" data-placement="top" title="Add to wishlist" class="btn btn-default"><i class="fa fa-heart-o"></i></a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Signin", "User")" data-toggle="tooltip" data-placement="top" title="Add to wishlist" class="btn btn-default"><i class="fa fa-heart-o"></i></a>
                                }
                            </p>
                        </form>
                        <div id="details">
                            <p></p>
                            <h4>Chi tiết về sản phẩm</h4>
                            <p>@Model.NoiDung</p>
                        </div>
                    </div>
                </div>
                <div id="product-social" class="box social text-center mb-5 mt-5">
                    <h4 class="heading-light">Chia sẻ cho bạn bè của bạn</h4>
                    <ul class="social list-inline">
                        <li class="list-inline-item"><a href="https://www.facebook.com/" class="external facebook"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.google.com.vn/" class="external gplus"><i class="fa fa-google-plus"></i></a></li>
                        <li class="list-inline-item"><a href="https://twitter.com/home?lang=vi" class="external twitter"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="https://mail.google.com/" class="email"><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <div class="row">
                    @Html.Action("SPham", "Product")
                </div>
            </div>
        </div>
    </div>
</div>