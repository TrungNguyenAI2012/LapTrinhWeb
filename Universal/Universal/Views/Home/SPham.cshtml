@model IEnumerable<Universal.Models.SanPham>

@foreach (var i in Model)
{
    <div class="col-md-4">
        <div class="box-image">
            <div class="image">
                <img src=" @i.DDHinh" alt="" height="350" width="300" style="text-align: center; margin: 0 auto; display: block">
                <div class="overlay d-flex align-items-center justify-content-center">
                    <div class="content">
                        <div class="name">
                            <h3><a href="@Url.Action("Detail", "Product", new { id = i.MaSP })" class="color-white"> @i.TenSP</a></h3>
                        </div>
                        <div class="text">
                            <p class="buttons">
                                <a href="@Url.Action("Detail", "Product", new { id = i.MaSP })" class="btn btn-template-outlined-white">Xem chi tiết</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

