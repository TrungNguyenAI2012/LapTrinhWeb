
@{
    ViewBag.Title = "Home - Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel = "stylesheet" href = "https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" integrity = "sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin = "" >
}

<div id="heading-breadcrumbs" class="brder-top-0 border-bottom-0">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Liên hệ</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Liên hệ</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div id="contact" class="container">
        <section class="bar">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading">
                        <h2>Chúng tôi ở đây để giúp bạn</h2>
                    </div>
                    <p class="lead">Bạn có tò mò về điều gì đó không? Bạn có một số loại vấn đề với sản phẩm của chúng tôi? Như tôi đã vội vàng được mời giải quyết với tài sản dân sự hạn chế của tôi. Thực sự mùa xuân trong một mức độ. Người phán xử nhưng lại xây dựng thế giới tiệc tùng đồng tính. Tất nhiên là anh ấy nhớ mặc dù được yêu cầu. Cử nhân giải nén được nâng cao tại. Giới hạn trong marianne được khai báo là vùng phụ cận.</p>
                    <p class="text-sm">Xin vui lòng liên hệ với chúng tôi, trung tâm dịch vụ khách hàng của chúng tôi đang làm việc cho bạn 24/7.</p>
                </div>
            </div>
        </section>
        <section>
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="box-simple">
                        <div class="icon-outlined"><i class="fa fa-map-marker"></i></div>
                        <h3 class="h4">Địa chỉ</h3>
                        <p>13/25 Trịnh Thị Dối<br>Xã Đông Thạnh<br>Huyện Hóc Môn, <strong>Việt Nam</strong></p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="box-simple">
                        <div class="icon-outlined"><i class="fa fa-phone"></i></div>
                        <h3 class="h4">Trung tâm liên lạc</h3>
                        <p>Số này là miễn phí nếu gọi từ Việt Nam. Nếu ở ngoài nước,  bạn nên sử dụng hình thức liên lạc điện tử.</p>
                        <p><strong><a href="tel:0949010239">0949 010 239</a></strong></p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="box-simple">
                        <div class="icon-outlined"><i class="fa fa-envelope"></i></div>
                        <h3 class="h4">Email</h3>
                        <p>Vui lòng viết email cho chúng tôi.</p>
                        <p><strong><a href="mailto:UniversalShop@gmail.com">UniversalShop@gmail.com</a></strong></p>
                    </div>
                </div>
            </div>
        </section>
        <section class="bar pt-0">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading text-center">
                        <h2>Mẫu liên hệ</h2>
                    </div>
                </div>
                <div class="col-md-8 mx-auto">
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="firstname">Tên</label>
                                    <input id="firstname" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="lastname">Họ</label>
                                    <input id="lastname" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input id="email" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="subject">Tiêu đề</label>
                                    <input id="subject" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="message">Tin nhắn</label>
                                    <textarea id="message" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-template-outlined"><i class="fa fa-envelope-o"></i> Gửi tin nhắn</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
    <div id="map"></div>
</div>

@section scripts {
    <script src = "https://unpkg.com/leaflet@1.6.0/dist/leaflet.js" integrity = "sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew==" crossorigin = "" ></script>
    <script src="~/Scripts/map.js"></script>
}

