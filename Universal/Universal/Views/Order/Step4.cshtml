@using Universal.Models;
@model List<GioHang>

@{
    ViewBag.Title = "Order - Step4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Xem lại đơn</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Xem lại đơn</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">
            <div id="checkout" class="col-lg-12">
                <div class="box">

                    <ul class="nav nav-pills nav-fill">
                        <li class="nav-item"><a href="@Url.Action("Step1", "Order")" class="nav-link"> <i class="fa fa-map-marker"></i><br>Địa chỉ</a></li>
                        <li class="nav-item"><a href="@Url.Action("Step2", "Order")" class="nav-link"><i class="fa fa-truck"></i><br>Phương thức vận chuyển</a></li>
                        <li class="nav-item"><a href="@Url.Action("Step3", "Order")" class="nav-link"><i class="fa fa-money"></i><br>Phương thức thanh toán</a></li>
                        <li class="nav-item"><a href="@Url.Action("Step4", "Order")" class="nav-link active"><i class="fa fa-eye"></i><br>Xem lại đơn</a></li>
                    </ul>
                    
                    <form method="get" action="@Url.Action("Message", "Order")">
                        <div class="content">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="2">Sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Giá</th>
                                            <th>Khuyến mãi</th>
                                            <th>Tổng cộng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var i in Model)
                                        {
                                            <tr>
                                                <td><a href="@Url.Action("Detail", "Product", new { id = i.sMaSP })"><img src="@i.sHinhSP" alt="@i.sTenSP" class="img-fluid"></a></td>
                                                <td><a href="@Url.Action("Detail", "Product", new { id = i.sMaSP })">@i.sTenSP</a></td>
                                                <td>
                                                    <input type="number" value="@i.iSoLg" class="form-control">
                                                </td>
                                                <td>@String.Format("{0:0,0}", @i.dGiaSP)VNĐ</td>
                                                <td>@String.Format("{0:0,0}", @i.dKhuyenMai)VNĐ</td>
                                                <td>@String.Format("{0:0,0}", @i.dTongTien)VNĐ</td>
                                                <td><a href="#"><i class="fa fa-trash-o"></i></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="5">Phí ship</th>
                                            <th> 10.000 VNĐ</th>
                                        </tr>
                                    </tfoot>
                                    <tfoot>
                                        <tr>
                                            <th colspan="5">Tổng cộng</th>
                                            <th>@String.Format("{0:0,0}", @ViewBag.TongTien + 10000) VNĐ</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="box-footer d-flex flex-wrap align-items-center justify-content-between">
                            <div class="left-col"><a href="@Url.Action("Step3", "Order")" class="btn btn-secondary mt-0"><i class="fa fa-chevron-left"></i>Phương thức thanh toán</a></div>
                            <div class="right-col">
                                <button type="submit" class="btn btn-template-main">Thanh toán<i class="fa fa-chevron-right"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>