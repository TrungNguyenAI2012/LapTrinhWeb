@using Universal.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Universal | @ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    @Styles.Render("~/bundles/vendor/styles")
    @Styles.Render("~/bundles/styles")
    @RenderSection("styles", required: false)
    <link rel="shortcut icon" href="~/Asset/Image/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/Asset/Image/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="57x57" href="~/Asset/Image/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Asset/Image/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Asset/Image/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Asset/Image/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Asset/Image/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Asset/Image/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Asset/Image/apple-touch-icon-152x152.png">
</head>
<body>
    <div id="all">
        <!-- Top bar-->
        <div class="top-bar">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-md-6 d-md-block d-none">
                        <p>Liên hệ chúng tôi qua: <b><a href="tel:0949010239">0949 010 239</a></b> Hoặc <b><a href="mailto:UniversalShop@gmail.com">UniversalShop@gmail.com</a></b></p>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-md-end justify-content-between">
                            <ul class="list-inline contact-info d-block d-md-none">
                                <li class="list-inline-item"><a href="tel:0949010239"><i class="fa fa-phone"></i></a></li>
                                <li class="list-inline-item"><a href="mailto:UniversalShop@gmail.com"><i class="fa fa-envelope"></i></a></li>
                            </ul>
                            <div class="login">
                                @{ 
                                    ThanhVien session = (ThanhVien)Session["taikhoan"];
                                }
                                @if (session != null) {
                                     <a href = "@Url.Action("Index", "Order")" class="signup-btn"><i class="fa fa-shopping-cart"></i><span class="d-none d-md-inline-block">Giỏ hàng</span></a>
                                     <a href = "@Url.Action("LogOut", "User")" class="signup-btn"><i class="fa fa-sign-out"></i><span class="d-none d-md-inline-block">Đăng xuất</span></a>
                                } else
                                {
                                    <a href = "@Url.Action("Signin", "User")" class="signup-btn"><i class="fa fa-sign-in"></i><span class="d-none d-md-inline-block">Đăng nhập</span></a>
                                    <a href = "@Url.Action("Signup", "User")" class="signup-btn"><i class="fa fa-user"></i><span class="d-none d-md-inline-block">Đăng ký</span></a><br />
                                }
                            </div>
                            <ul class="social-custom list-inline">
                                <li class="list-inline-item"><a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a></li>
                                <li class="list-inline-item"><a href="https://www.google.com.vn/"><i class="fa fa-google-plus"></i></a></li>
                                <li class="list-inline-item"><a href="https://twitter.com/home?lang=vi"><i class="fa fa-twitter"></i></a></li>
                                <li class="list-inline-item"><a href="https://mail.google.com/"><i class="fa fa-envelope"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Top bar end-->

        <!-- Navbar Start-->
        <header class="nav-holder make-sticky">
            <div id="navbar" role="navigation" class="navbar navbar-expand-lg">
                <div class="container">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand home"><img src="~/Asset/Image/logo.png" alt="Universal logo" class="d-none d-md-inline-block"><img src="~/Asset/Image/logo-small.png" alt="Universal logo" class="d-inline-block d-md-none"><span class="sr-only">Universal - go to homepage</span></a>
                    <button type="button" data-toggle="collapse" data-target="#navigation" class="navbar-toggler btn-template-outlined"><span class="sr-only">Toggle navigation</span><i class="fa fa-align-justify"></i></button>
                    <div id="navigation" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav ml-auto">
                            @if (session != null)
                            {
                                <li class="nav-item dropdown">
                                    <a href="#" data-toggle="dropdown" class="dropdown-toggle">Người dùng <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "User")" class="nav-link">Lịch sử</a></li>
                                        <li><a href="@Url.Action("Wishlist", "User")" class="nav-link">Yêu thích</a></li>
                                        <li><a href="@Url.Action("Account", "User")" class="nav-link">Đổi mật khẩu</a></li>
                                    </ul>
                                </li>
                            }
                            <li class="nav-item active"><a href="@Url.Action("Index", "Home")" class="nav-link">Trang chủ</a></li>
                            <li class="nav-item"><a href="@Url.Action("About", "Home")" class="nav-link">Giới thiệu</a></li>
                            <li class="nav-item dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Sản phẩm <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    @Html.Action("ChuDe", "Product")
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Bài viết <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    @Html.Action("ChuDe", "Blog")
                                </ul>
                            </li>
                            <li class="nav-item"><a href="@Url.Action("Contact", "Home")" class="nav-link">Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- Navbar End-->

        @RenderBody()

        <!-- Voucher-->
        <div class="get-it">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 text-center p-3">
                        <h3>Hiện đang có rất nhiều chương trình giảm giá ưu đãi, Bạn muốn xem qua chứ?</h3>
                    </div>
                    <div class="col-lg-4 text-center p-3"><a href="@Url.Action("Index", "Product")" class="btn btn-template-outlined-white">Mua sắm ngay!</a></div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <h4 class="h6">Về chúng tôi</h4>
                        <p>Chúng tôi cung cấp các sản phẩm mới nhất với chất lượng ưu đãi.</p>
                        <p>@Html.ActionLink("Các câu hỏi thường gặp", "Faq", "Home")</p>
                        <hr>
                        <h4 class="h6">Mọi thắc mắc khác xin hãy gửi về cho chúng tôi</h4>
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control">
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-secondary"><i class="fa fa-send"></i></button>
                                </div>
                            </div>
                        </form>
                        <hr class="d-block d-lg-none">
                    </div>
                    <div class="col-lg-3">
                        <h4 class="h6">Thẻ sản phẩm</h4>
                        <div class="panel-body">
                            <ul class="tag-cloud list-inline">
                                @Html.Action("The", "Product")
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <h4 class="h6">Thẻ bài viết</h4>
                        <div class="panel-body">
                            <ul class="tag-cloud list-inline">
                                @Html.Action("The", "Blog")
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <h4 class="h6">Liên hệ</h4>
                        <p class="text-uppercase"><strong>Công ty TNHH Universal.</strong><br>Đường Trịnh Thị dối <br>Xã Đông Thạnh, <br>Huyện Hóc Môn, <br>Thành phố Hồ Chí Minh, <br><strong>Việt Nam</strong></p><a href="@Url.Action("Contact", "Home")" class="btn btn-template-main">Đến trang liên hệ</a>
                        <hr class="d-block d-lg-none">
                    </div>
                </div>
            </div>
            <div class="copyrights">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 text-center-md">
                            <p>&copy; 2020 | Universal</p>
                        </div>
                        <div class="col-lg-8 text-right text-center-md">
                            <p>Template design by <a href="https://bootstrapious.com/snippets">Bootstrapious </a> & <a href="https://fity.cz/">Fity</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @Scripts.Render("~/bundles/vendor/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>