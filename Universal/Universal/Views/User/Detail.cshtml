@using Universal.Models;

@{
    ViewBag.Title = "User - Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Hóa đơn #@Model.SoDH</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item">@Html.ActionLink("Lịch sử đặt hàng", "Index", "User")</li>
                    <li class="breadcrumb-item active">Hóa đơn #@Model.SoDH</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row bar">
            <div id="customer-order" class="col-lg-9">
                <p class="lead">Đơn #@Model.SoDH được đặt vào <strong>@Model.NgayDat.ToShortDateString()</strong> đang trong trang thái <strong>@Model.TrangThaiDH</strong>.</p>
                <div class="box">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2" class="border-top-0">Sản phẩm</th>
                                    <th class="border-top-0">Số lượng</th>
                                    <th class="border-top-0">Giá</th>
                                    <th class="border-top-0">Khuyến mãi</th>
                                    <th class="border-top-0">Tổng cộng</th>
                                </tr>
                            </thead>
                            @Html.Action("ChiTiet", "User")
                            <!--<tfoot>
                            <tr>
                                <th colspan="5" class="text-right">Tổng hóa đơn</th>-->
                            @*<th>@String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</th>*@
                            <!--<th>/Tổng tiền/ VNĐ</th>
                                </tr>
                                <tr>
                                    <th colspan="5" class="text-right">Phí giao hàng</th>
                                    <th>10.000 VNĐ</th>
                                </tr>
                                <tr>
                                    <th colspan="5" class="text-right">Thuế</th>
                                    <th>0 VNĐ</th>
                                </tr>
                                <tr>
                                    <th colspan="5" class="text-right">Tổng cộng</th>
                                    <th>/Tổng tiền + 10000/ VNĐ</th>
                                </tr>
                            </tfoot>-->
                        </table>
                    </div>
                    <div class="row addresses">
                        <div>
                            <h3 class="text-uppercase">Địa chỉ nhận hàng: </h3> <p>@Model.DiaChiGiao</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 mt-4 mt-lg-0">
                <!-- CUSTOMER MENU -->
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="h4 panel-title">Danh mục khách hàng</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills flex-column text-sm">
                            <li class="nav-item"><a href="@Url.Action("Index", "User")" class="nav-link active"><i class="fa fa-list"></i> Lịch sử</a></li>
                            <li class="nav-item"><a href="@Url.Action("Wishlist", "User")" class="nav-link"><i class="fa fa-heart"></i> Yêu thích</a></li>
                            <li class="nav-item"><a href="@Url.Action("Account", "User")" class="nav-link"><i class="fa fa-user"></i> Tài khoản</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>