
@{
    ViewBag.Title = "User - Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Tài khoản</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Tài khoản</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row bar">
            <div id="customer-account" class="col-lg-9 clearfix">
                <p class="lead">Thay đổi mật khẩu hoặc thông tin cá nhân.</p>
                <div class="box mt-5">
                    <div class="heading">
                        <h3 class="text-uppercase">Đổi mật khẩu</h3>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password_old">Mật khẩu cũ</label>
                                    @Html.Password("MatKhauCu", null, new { @class = "form-control"})
                                    @ViewData["Loi1"]
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password_1">Mật khẩu mới</label>
                                    @Html.Password("MatKhauMoi", null, new { @class = "form-control"});
                                    @ViewData["Loi2"]
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-template-outlined"><i class="fa fa-save"></i> Lưu mật khẩu mới</button>
                        </div>
                    }
                    </div>
                <div class="bo3">
                    <div class="heading">
                        <h3 class="text-uppercase">Thông tin cá nhân</h3>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstname">Tên</label>
                                    <input id="firstname" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lastname">Họ</label>
                                    <input id="lastname" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="birthday">Ngày sinh</label>
                                    <input id="birthday" type="date" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="sex">Giới tính</label><br />
                                    <input type="radio" id="male" name="gender" value="male" style="margin-left: 0px">
                                    <label for="male">Nam</label>
                                    <input type="radio" id="female" name="gender" value="female" style="margin-left: 20px">
                                    <label for="female">Nữ</label><br>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="address">Địa chỉ</label>
                                    <input id="address" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Số điện thoại</label>
                                    <input id="phone" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email_account">Email</label>
                                    <input id="email_account" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-template-outlined"><i class="fa fa-save"></i> Lưu thay đổi</button>
                            </div>
                        </div>
                    }
                    </div>
            </div>
            <div class="col-lg-3 mt-4 mt-lg-0">
                <!-- CUSTOMER MENU -->
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="h4 panel-title">Danh mục khách hàng</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills flex-column text-sm">
                            <li class="nav-item"><a href="@Url.Action("Index", "User")" class="nav-link active"><i class="fa fa-list"></i> Lịch sử</a></li>
                            <li class="nav-item"><a href="@Url.Action("Wishlist", "User")" class="nav-link"><i class="fa fa-heart"></i> Yêu thích</a></li>
                            <li class="nav-item"><a href="@Url.Action("Account", "User")" class="nav-link"><i class="fa fa-user"></i> Tài khoản</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>